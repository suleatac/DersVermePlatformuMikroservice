@page
@model Mikroservice.web.Pages.Instructor.CreateCourseModel
@{
    ViewData["Title"] = "Create New Course";
    Layout = "_InstructorLayout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title h4 mb-0">Create a New Course</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="CreateCourseViewModel.Name" class="form-label"></label>
                            <input asp-for="CreateCourseViewModel.Name" class="form-control" />
                            <span asp-validation-for="CreateCourseViewModel.Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="CreateCourseViewModel.Description" class="form-label"></label>
                            <textarea asp-for="CreateCourseViewModel.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="CreateCourseViewModel.Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="CreateCourseViewModel.Price" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="CreateCourseViewModel.Price" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="CreateCourseViewModel.Price" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="CreateCourseViewModel.CategoryDropdownList" class="form-label"></label>
                                <select asp-for="CreateCourseViewModel.CategoryId" asp-items="Model.CreateCourseViewModel.CategoryDropdownList" class="form-select">
                                    <option value="">-- Select a Category --</option>
                                </select>
                                <span asp-validation-for="CreateCourseViewModel.CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="CreateCourseViewModel.PictureFormFile" class="form-label"></label>
                            <input asp-for="CreateCourseViewModel.PictureFormFile" class="form-control" type="file" accept="image/*" />
                            <div class="form-text">Upload an image for your course (recommended size: 1280x720px)</div>
                            <span asp-validation-for="CreateCourseViewModel.PictureFormFile" class="text-danger"></span>
                        </div>
                        
                        <hr class="my-4" />
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Back to Courses
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i> Create Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
