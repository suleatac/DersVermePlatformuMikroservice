<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mikroservice.web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mikroservice.web.styles.css" asp-append-version="true" />
    <style>
        .sidebar {
            position: sticky;
            top: 20px;
        }
        
        .list-group-item {
            border-radius: 0;
            border-left: 3px solid transparent;
            transition: all 0.2s;
        }
        
        .list-group-item:hover, .list-group-item:focus {
            border-left: 3px solid #0d6efd;
            background-color: rgba(13, 110, 253, 0.05);
        }
        
        .list-group-item.active {
            border-left: 3px solid #0d6efd;
            background-color: rgba(13, 110, 253, 0.15);
            color: #0d6efd;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <partial name="_HeaderDark" />
    
    <div class="container mt-4">
        <div class="row g-4">
            <!-- Sidebar - Solda -->
            <div class="col-md-3 mb-4">
                <div class="sidebar card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-person-workspace me-2"></i>Instructor Panel
                    </div>
                    <div class="list-group list-group-flush">
                        <a asp-page="/Instructor/Index" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Instructor/Index" ? "active" : "")">
                            <i class="bi bi-house-door me-2"></i>Dashboard
                        </a>
                        <a asp-page="/Instructor/Courses" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Instructor/Courses" ? "active" : "")">
                            <i class="bi bi-journal-bookmark me-2"></i>My Courses
                        </a>
                        <a asp-page="/Instructor/CreateCourse" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Instructor/CreateCourse" ? "active" : "")">
                            <i class="bi bi-plus-circle me-2"></i>Create Course
                        </a>
                        <a asp-page="/Instructor/Analytics" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Instructor/Analytics" ? "active" : "")">
                            <i class="bi bi-graph-up me-2"></i>Analytics
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Ana İçerik - Sağda -->
            <div class="col-md-9">
                <div class="card shadow-sm">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
